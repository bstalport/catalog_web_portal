<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tree view for Access Logs -->
    <record id="view_catalog_access_log_tree" model="ir.ui.view">
        <field name="name">catalog.access.log.tree</field>
        <field name="model">catalog.access.log</field>
        <field name="arch" type="xml">
            <list string="Access Logs" create="false" decoration-danger="not success">
                <field name="create_date" string="Date"/>
                <field name="client_name"/>
                <field name="user_name"/>
                <field name="action"/>
                <field name="product_count"/>
                <field name="export_format"/>
                <field name="ip_address"/>
                <field name="success"/>
            </list>
        </field>
    </record>
    
    <!-- Form view for Access Logs -->
    <record id="view_catalog_access_log_form" model="ir.ui.view">
        <field name="name">catalog.access.log.form</field>
        <field name="model">catalog.access.log</field>
        <field name="arch" type="xml">
            <form string="Access Log" create="false">
                <header>
                    <button name="action_view_products" type="object" string="View Products"
                            invisible="product_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="action"/>
                        </h1>
                        <h3>
                            <field name="create_date"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="User Information">
                            <field name="client_id"/>
                            <field name="user_id"/>
                            <field name="ip_address"/>
                        </group>
                        <group string="Action Details">
                            <field name="action_details"/>
                            <field name="product_count"/>
                            <field name="export_format" invisible="not export_format"/>
                        </group>
                    </group>
                    
                    <group string="Request Information">
                        <group>
                            <field name="user_agent"/>
                        </group>
                        <group>
                            <field name="http_referer"/>
                        </group>
                    </group>
                    
                    <group string="Result">
                        <group>
                            <field name="success"/>
                        </group>
                        <group>
                            <field name="error_message" invisible="not error_message"/>
                        </group>
                    </group>
                    
                    <field name="product_ids" readonly="1">
                        <list>
                            <field name="name"/>
                            <field name="default_code"/>
                            <field name="categ_id"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Search view for Access Logs -->
    <record id="view_catalog_access_log_search" model="ir.ui.view">
        <field name="name">catalog.access.log.search</field>
        <field name="model">catalog.access.log</field>
        <field name="arch" type="xml">
            <search string="Access Logs">
                <field name="client_id"/>
                <field name="user_id"/>
                <field name="ip_address"/>
                <field name="action"/>
                <separator/>
                <filter string="Date" name="filter_date" date="create_date"/>
                <separator/>
                <filter string="View Catalog" name="view_catalog" domain="[('action', '=', 'view_catalog')]"/>
                <filter string="Exports" name="exports" domain="[('action', 'in', ['export_csv', 'export_excel', 'direct_import'])]"/>
                <separator/>
                <filter string="Success" name="success" domain="[('success', '=', True)]"/>
                <filter string="Errors" name="errors" domain="[('success', '=', False)]"/>
                <group>
                    <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Action" name="group_action" context="{'group_by': 'action'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action for Access Logs -->
    <record id="action_catalog_access_log" model="ir.actions.act_window">
        <field name="name">Access Logs</field>
        <field name="res_model">catalog.access.log</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No access logs yet
            </p>
            <p>
                Access logs will appear here once clients start using the catalog portal.
            </p>
        </field>
    </record>
    
</odoo>
