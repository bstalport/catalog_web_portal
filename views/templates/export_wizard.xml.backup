<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Catalog Cart/Selection Template -->
    <template id="portal_catalog_cart" name="Catalog Selection Cart">
        <t t-call="catalog_web_portal.portal_catalog_layout">
            
            <!-- Header -->
            <div class="row mb-4">
                <div class="col-md-8">
                    <h2>
                        <i class="fa fa-shopping-cart"/> Your Selection
                    </h2>
                    <p class="text-muted">
                        <strong><t t-out="product_count"/></strong> product(s) selected for export
                    </p>
                </div>
                <div class="col-md-4 text-right">
                    <a href="/catalog/portal/browse" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"/> Back to Catalog
                    </a>
                </div>
            </div>
            
            <!-- Empty cart message -->
            <div class="row" t-if="not selected_products">
                <div class="col-md-12">
                    <div class="alert alert-info text-center" role="alert">
                        <h4><i class="fa fa-shopping-cart"/> Your selection is empty</h4>
                        <p class="mb-4">Browse the catalog and add products to your selection</p>
                        <a href="/catalog/portal/browse" class="btn btn-primary">
                            <i class="fa fa-book"/> Browse Catalog
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Selected Products -->
            <div t-if="selected_products">

                <!-- Saved Selections Management -->
                <div class="card mb-4">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fa fa-bookmark"/> Saved Selections
                        </h5>
                        <button type="button" class="btn btn-sm btn-primary" id="btn-save-selection">
                            <i class="fa fa-save"/> Save Current Selection
                        </button>
                    </div>
                    <div class="card-body">
                        <div id="saved-selections-container">
                            <p class="text-muted text-center mb-0">
                                <i class="fa fa-spinner fa-spin"/> Loading saved selections...
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Products Table -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Selected Products</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th width="80">Image</th>
                                    <th>Product</th>
                                    <th>Reference</th>
                                    <th>Category</th>
                                    <th width="120" class="text-right">Price</th>
                                    <th width="80" class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="selected_products" t-as="product">
                                    <tr t-att-data-product-id="product.id">
                                        <!-- Image -->
                                        <td>
                                            <t t-if="product.image_512">
                                                <img t-att-src="'/web/image/product.template/%s/image_128' % product.id" 
                                                     class="img-thumbnail" 
                                                     style="max-width: 60px;"/>
                                            </t>
                                            <t t-else="">
                                                <div class="d-flex align-items-center justify-content-center bg-light" 
                                                     style="width: 60px; height: 60px;">
                                                    <i class="fa fa-image text-muted"/>
                                                </div>
                                            </t>
                                        </td>
                                        
                                        <!-- Name -->
                                        <td>
                                            <a t-attf-href="/catalog/portal/product/#{product.id}">
                                                <strong><t t-out="product.name"/></strong>
                                            </a>
                                        </td>
                                        
                                        <!-- Reference -->
                                        <td>
                                            <span class="text-muted" t-out="product.default_code or '-'"/>
                                        </td>
                                        
                                        <!-- Category -->
                                        <td>
                                            <span t-if="product.categ_id" t-out="product.categ_id.name"/>
                                            <span t-else="" class="text-muted">-</span>
                                        </td>
                                        
                                        <!-- Price -->
                                        <td class="text-right">
                                            <strong>
                                                <t t-out="'%.2f' % product.list_price"/>
                                                <t t-out="catalog_client.pricelist_id.currency_id.symbol if catalog_client.pricelist_id else '€'"/>
                                            </strong>
                                        </td>
                                        
                                        <!-- Remove button -->
                                        <td class="text-center">
                                            <button class="btn btn-sm btn-danger btn-remove-from-cart" 
                                                    t-att-data-product-id="product.id">
                                                <i class="fa fa-trash"/>
                                            </button>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-warning" id="btn-clear-selection">
                            <i class="fa fa-times"/> Clear All
                        </button>
                    </div>
                </div>
                
                <!-- Export Options -->
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fa fa-download"/> Export for Odoo Import
                        </h5>
                    </div>
                    <div class="card-body">
                        <form id="export-form" action="/catalog/export/csv" method="post">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                            <!-- Export Format -->
                            <h6>Export Format</h6>
                            <div class="form-group">
                                <div class="custom-control custom-radio">
                                    <input type="radio"
                                           id="format-csv"
                                           name="export_format"
                                           class="custom-control-input"
                                           value="csv"
                                           checked="checked"/>
                                    <label class="custom-control-label" for="format-csv">
                                        <strong>CSV</strong> - Compatible with Odoo standard import
                                    </label>
                                </div>
                                <div class="custom-control custom-radio" t-if="config.allow_excel_export">
                                    <input type="radio"
                                           id="format-excel"
                                           name="export_format"
                                           class="custom-control-input"
                                           value="excel"/>
                                    <label class="custom-control-label" for="format-excel">
                                        <strong>Excel (.xlsx)</strong> - Formatted spreadsheet with auto-filter
                                    </label>
                                </div>
                            </div>

                            <!-- Export Options -->
                            <h6 class="mt-4">Export Options</h6>
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox"
                                           class="custom-control-input"
                                           id="include-images"
                                           name="include_images"/>
                                    <label class="custom-control-label" for="include-images">
                                        Include product images (may increase file size significantly)
                                    </label>
                                </div>
                            </div>

                            <!-- Download Button -->
                            <div class="mt-4">
                                <button type="submit" id="btn-export" class="btn btn-success btn-lg btn-block">
                                    <i class="fa fa-download"/> Download CSV File
                                </button>
                            </div>
                        </form>
                        
                        <hr class="my-4"/>
                        
                        <!-- Import Instructions -->
                        <div class="alert alert-info" role="alert">
                            <h6><i class="fa fa-info-circle"/> How to Import in Your Odoo</h6>
                            <ol class="mb-0">
                                <li>Download the CSV file above</li>
                                <li>In your Odoo: Go to <strong>Purchase → Products</strong></li>
                                <li>Click <strong>Favorites → Import records</strong></li>
                                <li>Upload the downloaded CSV file</li>
                                <li>Verify column mappings</li>
                                <li>Click <strong>Import</strong></li>
                            </ol>
                        </div>
                        
                        <!-- Direct Import -->
                        <div t-if="config.allow_direct_odoo_import" class="mt-4">
                            <h6>
                                <i class="fa fa-magic"/> Direct Odoo Import
                                <span class="badge bg-success">Available</span>
                            </h6>

                            <!-- Check if connection is configured -->
                            <t t-set="connection" t-value="catalog_client.env['catalog.client.connection'].sudo().search([('client_id', '=', catalog_client.id), ('is_active', '=', True)], limit=1)"/>

                            <t t-if="connection and connection.connection_status == 'ok'">
                                <!-- Connection configured and working -->
                                <div class="alert alert-success">
                                    <i class="fa fa-check-circle"/> Connected to: <strong t-out="connection.odoo_url"/>
                                </div>

                                <p class="text-muted mb-3">
                                    Import products directly into your Odoo instance with one click.
                                    A preview will be shown before any changes are made.
                                </p>

                                <a href="/catalog/portal/sync/preview" class="btn btn-primary btn-lg btn-block">
                                    <i class="fa fa-cloud-upload"/> Import to My Odoo
                                </a>

                                <a href="/catalog/portal/sync/mappings" class="btn btn-outline-info btn-block mt-2">
                                    <i class="fa fa-exchange"/> View Field Mappings
                                </a>

                                <small class="text-muted d-block mt-2">
                                    Last sync: <t t-if="connection.last_sync_date" t-out="connection.last_sync_date" t-options="{'widget': 'datetime'}"/>
                                    <t t-else="">Never</t>
                                </small>
                            </t>

                            <t t-elif="connection">
                                <!-- Connection configured but not tested / error -->
                                <div class="alert alert-warning">
                                    <i class="fa fa-exclamation-triangle"/> Connection configured but not tested
                                </div>

                                <p class="text-muted mb-3">
                                    Your connection settings need to be verified.
                                </p>

                                <a href="/catalog/portal/sync/setup" class="btn btn-warning btn-lg btn-block">
                                    <i class="fa fa-wrench"/> Configure Connection
                                </a>
                            </t>

                            <t t-else="">
                                <!-- No connection configured -->
                                <p class="text-muted mb-3">
                                    Configure your Odoo connection to enable automatic import.
                                    Products will be imported directly into your Odoo database.
                                </p>

                                <a href="/catalog/portal/sync/setup" class="btn btn-primary btn-lg btn-block">
                                    <i class="fa fa-plug"/> Setup Connection
                                </a>

                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="fa fa-info-circle"/> You'll need your Odoo URL, database name, and API key
                                    </small>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
            
        </t>
    </template>
    
</odoo>
