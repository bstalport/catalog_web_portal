<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="access_denied" name="Access Denied">
        <t t-call="portal.portal_layout">
            <t t-set="additional_title">Access Denied</t>
            
            <div class="container mt-5">
                <div class="row">
                    <div class="col-lg-6 offset-lg-3">
                        <div class="card text-center">
                            <div class="card-body py-5">
                                <i class="fa fa-lock fa-5x text-danger mb-4"></i>
                                <h2 class="mb-3">Access Denied</h2>
                                <p class="text-muted mb-4">
                                    You do not have access to the catalog portal.
                                    <br/>
                                    Please contact your supplier to request access.
                                </p>
                                <a href="/my/home" class="btn btn-primary">
                                    <i class="fa fa-home"></i> Back to Portal Home
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
</odoo>
