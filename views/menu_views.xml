    <!-- Products submenu -->
    <menuitem id="menu_catalog_products"
              name="Products"
              parent="menu_catalog_root"
              action="product.product_template_action_all"
              sequence="20"/>
    
    <!-- Configuration submenu -->
    <menuitem id="menu_catalog_configuration"
              name="Configuration"
              parent="menu_catalog_root"
              sequence="90"/>
    
    <menuitem id="menu_catalog_config"
              name="Settings"
              parent="menu_catalog_configuration"
              action="action_catalog_config"
