              name="Analytics"
              parent="menu_catalog_root"
              sequence="80"/>

    <menuitem id="menu_catalog_access_logs"
              name="Access Logs"
              parent="menu_catalog_analytics"
              action="action_catalog_access_log"
              sequence="10"/>

    <menuitem id="menu_catalog_sync_history"
              name="Sync History"
              parent="menu_catalog_analytics"
              action="action_catalog_sync_history"
              sequence="20"/>

