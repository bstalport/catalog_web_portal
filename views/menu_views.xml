              web_icon="catalog_web_portal,static/description/icon.png"
              sequence="50"/>
    
    <!-- Clients submenu -->
    <menuitem id="menu_catalog_clients"
              name="Clients"
              parent="menu_catalog_root"
              action="action_catalog_client"
