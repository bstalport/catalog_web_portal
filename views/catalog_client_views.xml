<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tree view for Catalog Clients -->
    <record id="view_catalog_client_tree" model="ir.ui.view">
        <field name="name">catalog.client.tree</field>
        <field name="model">catalog.client</field>
        <field name="arch" type="xml">
            <list string="Catalog Clients" decoration-muted="not is_active">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="email"/>
                <field name="access_mode"/>
                <field name="pricelist_id"/>
                <field name="export_count"/>
                <field name="last_export_date"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>
    
    <!-- Form view for Catalog Clients -->
    <record id="view_catalog_client_form" model="ir.ui.view">
        <field name="name">catalog.client.form</field>
        <field name="model">catalog.client</field>
        <field name="arch" type="xml">
            <form string="Catalog Client">
                <header>
                    <button name="action_send_portal_invite" type="object" string="Send Portal Invitation" class="oe_highlight"/>
                    <button name="action_regenerate_api_credentials" type="object" string="Regenerate API Keys" groups="base.group_system"/>
                    <button name="action_open_portal" type="object" string="Open Portal" icon="fa-external-link"/>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_access_logs" type="object" class="oe_stat_button" icon="fa-history">
                            <field name="export_count" widget="statinfo" string="Exports"/>
                        </button>
                        <button name="action_view_access_logs" type="object" class="oe_stat_button" icon="fa-eye">
                            <field name="total_access_count" widget="statinfo" string="Accesses"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Client Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Client Information">
                            <field name="partner_id" context="{'show_vat': True, 'default_is_company': True}"/>
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                        </group>
                        <group string="Access Statistics">
                            <field name="last_access_date"/>
                            <field name="last_export_date"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Access Control" name="access">
                            <group>
                                <group string="Product Visibility">
                                    <field name="access_mode"/>
                                    <field name="allowed_category_ids" widget="many2many_tags"
                                           invisible="access_mode != 'restricted'"/>
                                    <field name="allowed_product_ids" widget="many2many_tags"
                                           invisible="access_mode != 'custom'"/>
                                </group>
                                <group string="Pricing">
                                    <field name="pricelist_id"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="API Credentials" name="api" groups="base.group_system">
                            <group>
                                <group>
                                    <field name="api_key" password="True"/>
                                    <field name="api_secret" password="True"/>
                                </group>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <h4>API Usage</h4>
                                <p>These credentials can be used by the client for direct Odoo import via XML-RPC.</p>
                                <p><b>Important:</b> Keep these credentials secure. They provide access to your catalog.</p>
                            </div>
                        </page>
                        
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Internal notes about this client..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Kanban view for Catalog Clients -->
    <record id="view_catalog_client_kanban" model="ir.ui.view">
        <field name="name">catalog.client.kanban</field>
        <field name="model">catalog.client</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="is_active"/>
                <templates>
                    <t t-name="card">
                        <div class="d-flex align-items-baseline mb-2">
                            <field name="name" class="fw-bolder fs-5 me-2"/>
                            <span class="badge rounded-pill ms-auto"
                                  t-attf-class="{{record.is_active.raw_value ? 'bg-success' : 'bg-secondary'}}">
                                <t t-if="record.is_active.raw_value">Active</t>
                                <t t-else="">Inactive</t>
                            </span>
                        </div>
                        <field name="partner_id" class="text-muted"/>
                        <field name="email" widget="email" class="text-muted"/>
                        <div class="mt-2">
                            <span class="badge rounded-pill bg-info text-dark">
                                <field name="access_mode"/>
                            </span>
                        </div>
                        <footer class="align-items-end">
                            <div class="text-muted">
                                <i class="fa fa-download" title="Exports"/> <field name="export_count"/> exports
                            </div>
                        </footer>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Search view for Catalog Clients -->
    <record id="view_catalog_client_search" model="ir.ui.view">
        <field name="name">catalog.client.search</field>
        <field name="model">catalog.client</field>
        <field name="arch" type="xml">
            <search string="Catalog Clients">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="email"/>
                <separator/>
                <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                <separator/>
                <filter string="Full Access" name="full_access" domain="[('access_mode', '=', 'full')]"/>
                <filter string="Restricted" name="restricted" domain="[('access_mode', '=', 'restricted')]"/>
                <filter string="Custom" name="custom" domain="[('access_mode', '=', 'custom')]"/>
                <group>
                    <filter string="Access Mode" name="group_access_mode" context="{'group_by': 'access_mode'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'is_active'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action for Catalog Clients -->
    <record id="action_catalog_client" model="ir.actions.act_window">
        <field name="name">Catalog Clients</field>
        <field name="res_model">catalog.client</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first catalog client
            </p>
            <p>
                Catalog clients are customers who can access your product catalog through a secure portal.
                They can browse, select and export products to import into their own Odoo instance.
            </p>
        </field>
    </record>
    
</odoo>
