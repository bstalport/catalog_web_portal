<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Security Group: Catalog Manager -->
        <record id="group_catalog_manager" model="res.groups">
            <field name="name">Catalog Manager</field>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="comment">Can manage catalog configuration, clients, and view analytics</field>
        </record>
        
        <!-- Security Group: Catalog User -->
        <record id="group_catalog_user" model="res.groups">
            <field name="name">Catalog User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Can view catalog configuration and clients</field>
        </record>
        
        <!-- Record Rules -->
        
        <!-- Rule: Catalog Client - Manager can see all -->
        <record id="catalog_client_manager_rule" model="ir.rule">
            <field name="name">Catalog Client: Manager sees all</field>
            <field name="model_id" ref="model_catalog_client"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_catalog_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Rule: Catalog Client - User can see all (read only) -->
        <record id="catalog_client_user_rule" model="ir.rule">
            <field name="name">Catalog Client: User sees all (read)</field>
            <field name="model_id" ref="model_catalog_client"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_catalog_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Rule: Catalog Client - Portal user sees own record -->
        <record id="catalog_client_portal_rule" model="ir.rule">
            <field name="name">Catalog Client: Portal user sees own</field>
            <field name="model_id" ref="model_catalog_client"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Rule: Products - Portal users see published products only -->
        <record id="product_template_portal_rule" model="ir.rule">
            <field name="name">Product: Portal users see published</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="domain_force">[('is_published', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Rule: Product Variants - Portal users see variants of published templates -->
        <record id="product_product_portal_rule" model="ir.rule">
            <field name="name">Product Variant: Portal users see published</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="domain_force">[('product_tmpl_id.is_published', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Portal Record Rules: restrict portal users to their own data -->

        <record id="catalog_connection_portal_rule" model="ir.rule">
            <field name="name">Connection: Portal user sees own</field>
            <field name="model_id" ref="model_catalog_client_connection"/>
            <field name="domain_force">[('client_id.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="catalog_field_mapping_portal_rule" model="ir.rule">
            <field name="name">Field Mapping: Portal user sees own</field>
            <field name="model_id" ref="model_catalog_field_mapping"/>
            <field name="domain_force">[('connection_id.client_id.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="catalog_category_mapping_portal_rule" model="ir.rule">
            <field name="name">Category Mapping: Portal user sees own</field>
            <field name="model_id" ref="model_catalog_category_mapping"/>
            <field name="domain_force">[('connection_id.client_id.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="catalog_sync_preview_portal_rule" model="ir.rule">
            <field name="name">Sync Preview: Portal user sees own</field>
            <field name="model_id" ref="model_catalog_sync_preview"/>
            <field name="domain_force">[('connection_id.client_id.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="catalog_sync_change_portal_rule" model="ir.rule">
            <field name="name">Sync Change: Portal user sees own</field>
            <field name="model_id" ref="model_catalog_sync_change"/>
            <field name="domain_force">[('preview_id.connection_id.client_id.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="catalog_saved_selection_portal_rule" model="ir.rule">
            <field name="name">Saved Selection: Portal user sees own</field>
            <field name="model_id" ref="model_catalog_saved_selection"/>
            <field name="domain_force">[('catalog_client_id.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="catalog_attribute_mapping_portal_rule" model="ir.rule">
            <field name="name">Attribute Mapping: Portal user sees own</field>
            <field name="model_id" ref="model_catalog_attribute_mapping"/>
            <field name="domain_force">[('connection_id.client_id.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="catalog_attribute_value_mapping_portal_rule" model="ir.rule">
            <field name="name">Attribute Value Mapping: Portal user sees own</field>
            <field name="model_id" ref="model_catalog_attribute_value_mapping"/>
            <field name="domain_force">[('connection_id.client_id.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
